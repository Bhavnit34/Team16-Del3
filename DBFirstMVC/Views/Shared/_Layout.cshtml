<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Team 16 Timetabling System</title>
 
        <img src ="../Images/logo.png" alt="Images/logo.png"/>

        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/themes/smoothness/jquery-ui.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
        @RenderSection("scripts", required: false)
    </head>
    <body>
        <header>
           
             <div class="content-wrapper">
                <div class="float-left">
                <p id="siteTitle" class="site-title"> @* @Html.ActionLink("Home", "Index", "Home") *@ 

                        <a style="color:gray; font-style:italic; font-size:0.6em;"> @ViewBag.CurrentUserTitle</a>
                    </p>
                </div>
                    

                <div>
                    <span style="float: right; text-decoration: none;">Current Round: @ViewBag.CurrentRound</span><br />
                    <span style="float: right; text-decoration: none;">Current Semester: @ViewBag.CurrentSemester</span>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Create Request", "CreateNew", "Request")</li>
                            <li>@Html.ActionLink("History","Index","Request")</li>
                            <li>@Html.ActionLink("Ad-Hoc","CreateNew","Request")</li>
                            <li>@Html.ActionLink("Module","Module","Request")</li>
                             <li>@Html.ActionLink("Room","EditPool","Admin")</li>
                            @{
                                if(ViewBag.LogOut == true){
                                    <li>@Html.ActionLink("Log out","Logout","Login")</li>
                                }
                                else{
                                    <li>@Html.ActionLink("Log in","Index","Login")</li>
                                }
                              }
                            
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @Html.Action(actionName: "TempMessage", controllerName: "Message")   
                @RenderBody()
            </section>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - Team 16</p>
                </div>
            </div>
        </footer>


        @RenderSection("CreateNewScript", required: false)
        @RenderSection("GetRequestScript", required: false)
        @RenderSection("MyScripts",required: false)
        @RenderSection("LoginScript", required: false)
    </body>
</html>
